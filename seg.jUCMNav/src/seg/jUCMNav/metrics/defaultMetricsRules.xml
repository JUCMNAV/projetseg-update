<?xml version="1.0" standalone="no"?>
<Rules>	
	<Rule>
		<Name>CountResponsibility</Name>
		<Description>Count Responsibility</Description>
		<Classification>urncore::Responsibility</Classification>
		<Query>self.urndef.responsibilities-&gt;asSequence()-&gt;size()</Query>
		<Constraint></Constraint>
		<Utilities/>
	</Rule>
	<Rule>
		<Name>ResponsibilitiesPerMap</Name>
		<Description>Responsibility per map</Description>
		<Classification>urn::URNspec</Classification>
		<Query>let resp:Integer=(self.urndef.responsibilities-&gt;size()), map:Integer=(self.urndef.components-&gt;size()) in resp/map</Query>
		<Constraint></Constraint>
		<Utilities/>
	</Rule>
	
</Rules>