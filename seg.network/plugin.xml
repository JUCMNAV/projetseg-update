<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="seg.network"
   name="Network Plug-in"
   version="1.0.0"
   provider-name=""
   class="seg.network.NetworkPlugin">

   <runtime>
      <library name="network.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.emf"/>
      <import plugin="org.eclipse.emf.ecore"/>
      <import plugin="org.eclipse.draw2d"/>
      <import plugin="org.eclipse.gef"/>
      <import plugin="org.eclipse.ui.views"/>
   </requires>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Network Editor"
            extensions="net"
            icon="icons/sample.gif"
            contributorClass="seg.network.editors.NetworkEditorContributor"
            class="seg.network.editors.NetworkEditor"
            id="seg.network.editors.NetworkEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="Network Wizards"
            id="seg.network">
      </category>
      <wizard
            name="Network Editor file"
            icon="icons/sample.gif"
            category="seg.network"
            class="seg.network.wizards.NetworkNewWizard"
            id="seg.network.wizards.NetworkNewWizard">
      </wizard>
   </extension>

</plugin>
