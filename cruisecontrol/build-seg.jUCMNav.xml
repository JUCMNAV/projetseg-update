<!-- Delegating build script, used by cruisecontrol to build MY_PROJECT_1.
     Note that the basedir is set to the checked out project -->
<project name="build-seg.jUCMNav"
        default="build"
        basedir="checkout/get/seg.jUCMNav">
    <target name="build">
        <!-- Get the latest from CVS -->
        <cvs command="up -d -P"/>
        <!-- Call the target that does everything -->
        <ant antfile="build.xml" target="build.fullzip"/>
		<copy file="build/seg.jUCMNav_1.0.0.zip" todir="../../../eclipse-testing/" />
		<exec dir="../../../eclipse-testing/" executable="../../../eclipse-testing/runtests.bat" resolveexecutable="true">
			<arg line="-noclean jUCMNav" />
		</exec>
    </target>
</project>